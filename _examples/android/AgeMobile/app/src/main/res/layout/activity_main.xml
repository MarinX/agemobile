<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/keysView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="click generate to generate keys" />

        <Button
            android:id="@+id/generateKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Key" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textToEncrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="type text to encrypt" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/encryptBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encrypt" />

        <TextView
            android:id="@+id/encryptResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encrypted text will show here" />

        <Button
            android:id="@+id/decryptBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decrypt" />

        <TextView
            android:id="@+id/decryptText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="decrypted text will show here" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>